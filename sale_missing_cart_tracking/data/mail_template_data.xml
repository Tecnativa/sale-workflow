<odoo noupdate="0">
    <!--Email template -->
    <record id="missing_tracking_notification_template" model="mail.template">
        <field name="name">Stock out - Send by Email</field>
        <field
            name="email_from"
        >${(object.write_uid.email and '&quot;%s&quot; &lt;%s&gt;' % (object.write_uid.name, object.write_uid.email) or '')|safe}</field>
        <field name="subject">Products stock out</field>
        <field
            name="partner_to"
        >${object.partner_id and object.partner_id.id or ''}</field>
        <field
            name="model_id" ref="sale_missing_cart_tracking.model_sale_missing_tracking"
        />
        <field name="auto_delete" eval="True" />
        <field
            name="body_html"
        ><![CDATA[
<p>Products stock out summary</p>
<p>
The attached file is a PDF document containg the
products stock out summary.
</p>
<p>You can reply to this email if you have any questions.</p>
<p>Thank you,</p>

]]></field>
    </record>

</odoo>
