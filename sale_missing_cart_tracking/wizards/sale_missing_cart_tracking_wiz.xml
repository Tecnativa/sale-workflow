<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_missing_cart_tracking_wiz" model="ir.ui.view">
        <field name="name">Sale missing cart tracking wizard</field>
        <field name="model">sale.missing.tracking.wiz</field>
        <field name="arch" type="xml">
            <form string="Sale missing cart tracking wizard">
                <sheet>
                    <field name="has_pending_lines" invisible="1"/>
                    <group>
                        <field name="reason_id" options="{'no_create': True}"/>
                        <field name="reason_note"/>
                        <button name="action_mass_update" type="object" string="Update reason"/>
                    </group>
                    <group>
                        <field name="missing_tracking_ids" nolabel="1">
                            <tree string="Sale missing cart tracking" editable="top" create="false" delete="false">
                                <field name="partner_id" optional="hide"/>
                                <field name="order_id" optional="hide"/>
                                <field name="product_id"/>
                                <field name="reason_id"
                                       options="{'no_create': True}"
                                       attrs="{'required': [('reason_note', '!=', False)]}"
                                />
                                <field name="reason_note" optional="show"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button
                            name="missing_tracking_action_confirm"
                            string="Confirm"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('has_pending_lines', '=', True)]}"
                        />
                        <button
                            name="missing_tracking_action_confirm"
                            string="Delay and Confirm"
                            type="object"
                            attrs="{'invisible': [('has_pending_lines', '=', False)]}"
                            confirm="You have sale missing references without reason.
                                     Do you want delay set the reason of it?"
                        />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>

            </form>
        </field>
    </record>
    <act_window
        id="action_sale_missing_cart_tracking_wiz"
        name="Sale missing cart tracking"
        res_model="sale.missing.tracking.wiz"
        view_mode="form"
    />
</odoo>
